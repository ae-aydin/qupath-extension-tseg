<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="qupath.ext.tseg.setup.ui.SetupInterface" prefWidth="600"
      prefHeight="450" stylesheets="@setup-style.css" xmlns="http://javafx.com/javafx/20">

    <VBox alignment="CENTER" spacing="10">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>

        <Label text="TSEG Extension Setup">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Label>

        <Label text="The extension needs to download and set up required files. Please monitor the progress below."
               textAlignment="CENTER" wrapText="true"/>
        <Separator/>
    </VBox>

    <TextArea fx:id="setupLogArea" editable="false" styleClass="log-area" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="10" right="10"/>
        </VBox.margin>
    </TextArea>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <padding>
            <Insets top="15" right="10" bottom="10" left="10"/>
        </padding>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="closeButton" text="Close" onAction="#close" disable="true" minWidth="80" defaultButton="true"/>
    </HBox>

</VBox>